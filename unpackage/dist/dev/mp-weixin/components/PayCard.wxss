button {
  border: none;
  background: transparent;
}
button::after {
  content: unset;
}
.linear-bg {
  height: 100vh;
  background: linear-gradient(#4282D8, #7232CB);
}
.message-bg {
  min-height: 100vh;
  width: 100vw;
  background-color: #F5F8FD;
}
.btn {
  display: block;
  width: 280px;
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  white-space: nowrap;
  text-align: center;
  letter-spacing: 3px;
  color: #fff;
  font-weight: 400;
  background: linear-gradient(152deg, #3CB1D2, #5BACE4);
  box-shadow: 0px 10px 20px rgba(60, 124, 210, 0.24);
}
.btn.gradient {
  background: linear-gradient(135deg, #3C7CD2, #6732CB);
}
.cover-view-card {
  width: 680rpx;
  padding: 30rpx 40rpx;
  border-radius: 6rpx;
  background-color: #FFF;
  margin: 0 auto;
  box-sizing: border-box;
  font-weight: 300;
  box-shadow: 0 0 20rpx rgba(133, 132, 136, 0.1);
}
.icon {
  width: 120rpx;
  height: 38rpx;
}
.pay-card {
  width: 600rpx;
  height: 340rpx;
  background: linear-gradient(45deg, #299CEE, #3272CB);
  border-radius: 12rpx;
  padding: 60rpx;
  box-sizing: border-box;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.pay-card.pay-card--purle {
  background: linear-gradient(45deg, #E229EE, #A632CB);
}
.pay-card.pay-card--origin {
  background: linear-gradient(45deg, #EE6E29, #CB9032);
}
.pay-card-head,
.pay-card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pay-card-body {
  margin-bottom: 30rpx;
}
.pay-card-chip {
  width: 80rpx;
  height: 66rpx;
  background-color: #E3B229;
  border-radius: 12rpx;
}

