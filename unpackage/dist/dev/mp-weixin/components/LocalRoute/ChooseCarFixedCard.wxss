button {
  border: none;
  background: transparent;
}
button::after {
  content: unset;
}
.linear-bg {
  height: 100vh;
  background: linear-gradient(#4282D8, #7232CB);
}
.message-bg {
  min-height: 100vh;
  width: 100vw;
  background-color: #F5F8FD;
}
.btn {
  display: block;
  width: 280px;
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  white-space: nowrap;
  text-align: center;
  letter-spacing: 3px;
  color: #fff;
  font-weight: 400;
  background: linear-gradient(152deg, #3CB1D2, #5BACE4);
  box-shadow: 0px 10px 20px rgba(60, 124, 210, 0.24);
}
.btn.gradient {
  background: linear-gradient(135deg, #3C7CD2, #6732CB);
}
.cover-view-card {
  width: 680rpx;
  padding: 30rpx 40rpx;
  border-radius: 6rpx;
  background-color: #FFF;
  margin: 0 auto;
  box-sizing: border-box;
  font-weight: 300;
  box-shadow: 0 0 20rpx rgba(133, 132, 136, 0.1);
}
.choose-car {
  position: fixed;
  bottom: 68rpx;
}
.icon {
  width: 108rpx;
  height: 38rpx;
}
.icon.icon-people {
  width: 25rpx;
  margin-right: 12rpx;
}
.choose-car-title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.car-radio-group {
  display: flex;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #FAFAFA;
}
.car-radio-group .car-radio:nth-child(2) {
  margin: 0 20rpx;
}
.car-radio {
  width: 198rpx;
  height: 150rpx;
  background-color: #F9F9F9;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 12rpx 0;
}
.car-radio.active {
  color: #7232CB;
  background-color: #F5F3F9;
}
.car-name {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.people-num {
  display: flex;
  align-items: center;
}
.people-num-value {
  font-size: 22rpx;
}
.choose-car-title-bar {
  display: flex;
  justify-content: space-between;
}
.choose-car-title-bar .choose-car-price {
  color: #FF8834;
  font-size: 28rpx;
}
.request-btn {
  margin: 20rpx auto 0;
  width: 100%;
  box-shadow: unset;
}

