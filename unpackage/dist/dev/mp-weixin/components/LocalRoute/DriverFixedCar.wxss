button {
  border: none;
  background: transparent;
}
button::after {
  content: unset;
}
.linear-bg {
  height: 100vh;
  background: linear-gradient(#4282D8, #7232CB);
}
.message-bg {
  min-height: 100vh;
  width: 100vw;
  background-color: #F5F8FD;
}
.btn {
  display: block;
  width: 280px;
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  white-space: nowrap;
  text-align: center;
  letter-spacing: 3px;
  color: #fff;
  font-weight: 400;
  background: linear-gradient(152deg, #3CB1D2, #5BACE4);
  box-shadow: 0px 10px 20px rgba(60, 124, 210, 0.24);
}
.btn.gradient {
  background: linear-gradient(135deg, #3C7CD2, #6732CB);
}
.cover-view-card {
  width: 680rpx;
  padding: 30rpx 40rpx;
  border-radius: 6rpx;
  background-color: #FFF;
  margin: 0 auto;
  box-sizing: border-box;
  font-weight: 300;
  box-shadow: 0 0 20rpx rgba(133, 132, 136, 0.1);
}
.driver-fixed-car {
  position: fixed;
  bottom: 68rpx;
}
.icon {
  width: 32rpx;
  height: 34rpx;
}
.media-start {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.media {
  display: flex;
  align-items: center;
  padding: 30rpx 0 40rpx;
  border-bottom: 1rpx solid #FAFAFA;
}
.media-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.car-number {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #FAFAFA;
  font-size: 24rpx;
  text-align: center;
  letter-spacing: 2rpx;
}
.car-summary {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  font-size: 24rpx;
  padding: 40rpx 0;
  letter-spacing: 2rpx;
}
.car-summary .car-summary-title {
  color: #B8B8B8;
  margin-bottom: 12rpx;
}
.continue-btn {
  box-shadow: none;
  margin: 10rpx auto 20rpx;
  width: 100%;
}
.conatct-btn-group {
  display: flex;
}
.conatct-btn-group .btn {
  box-shadow: none;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.conatct-btn-group .btn:first-child {
  margin-right: 20rpx;
}
.conatct-btn-group .btn:last-child {
  margin-left: 20rpx;
}
.conatct-btn-group .btn.success-btn {
  background: #3FC05E;
}
.conatct-btn-group .btn .icon {
  margin-right: 20rpx;
}

