button {
  border: none;
  background: transparent;
}
button::after {
  content: unset;
}
.linear-bg {
  height: 100vh;
  background: linear-gradient(#4282D8, #7232CB);
}
.message-bg {
  min-height: 100vh;
  width: 100vw;
  background-color: #F5F8FD;
}
.btn {
  display: block;
  width: 280px;
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  white-space: nowrap;
  text-align: center;
  letter-spacing: 3px;
  color: #fff;
  font-weight: 400;
  background: linear-gradient(152deg, #3CB1D2, #5BACE4);
  box-shadow: 0px 10px 20px rgba(60, 124, 210, 0.24);
}
.btn.gradient {
  background: linear-gradient(135deg, #3C7CD2, #6732CB);
}
.cover-view-card {
  width: 680rpx;
  padding: 30rpx 40rpx;
  border-radius: 6rpx;
  background-color: #FFF;
  margin: 0 auto;
  box-sizing: border-box;
  font-weight: 300;
  box-shadow: 0 0 20rpx rgba(133, 132, 136, 0.1);
}
.history-container {
  padding: 30rpx;
  box-sizing: border-box;
}
.message-bg {
  min-height: 100vh;
  width: 100vw;
  background-color: #F5F8FD;
}
.history-group:not(:last-child) {
  margin-bottom: 100rpx;
}
.history-date {
  color: #8A8A8A;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.history-card {
  background-color: #fff;
  box-shadow: 0 0 50rpx rgba(0, 0, 0, 0.016);
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.history-card::before {
  content: "";
  position: absolute;
  top: 62rpx;
  left: 46rpx;
  width: 0rpx;
  height: 75rpx;
  border-right: 2px dashed #CECECE;
}
.history-card-direction {
  width: 100rpx;
  height: 100%;
  position: relative;
}
.carcle {
  width: 24rpx;
  height: 24rpx;
  border: 6rpx solid #7232CB;
  border-radius: 50%;
}
.carcle.orange-carcle {
  border-color: orange;
  width: 20rpx;
  height: 20rpx;
  -webkit-transform: translateX(2rpx);
          transform: translateX(2rpx);
}
.history-card-content {
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
}
.history-card-content-title {
  color: #B8B8B8;
  font-size: 22rpx;
}
.history-card-start,
.history-card-end {
  display: flex;
}
.history-card-start {
  padding-top: 0;
}
.history-card-start .history-card-content {
  border-bottom: 1PX solid #FAFAFA;
  padding-top: 0;
  padding-bottom: 30rpx;
}

